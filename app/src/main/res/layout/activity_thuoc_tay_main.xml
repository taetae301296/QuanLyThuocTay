<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <TextView
            android:id="@+id/infomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Làm việc với bảng product của DB QLThuocTay.db"
            android:textColor="#C51010" />

    <ListView
            android:id="@+id/listthuoctay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/createtable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo bảng" />

        <Button
                android:id="@+id/deletable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xoá bảng" />

        <Button
                android:id="@+id/addbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm thuốc" />

    </LinearLayout>

</LinearLayout>