<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#a6dfdfdf"
              android:gravity="center">

    <Button android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="THUỐC TÂY"
            android:id="@+id/btnThuocTay"/>

    <Button android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="CHI TIẾT BÁN"
            android:id="@+id/btnChiTietBan"/>

    <Button android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="HÓA ĐƠN"
            android:id="@+id/btnHoaDon"/>

    <Button android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="HIỆU THUỐC"
            android:id="@+id/btnHieuThuoc"/>

</LinearLayout>